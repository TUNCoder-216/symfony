{% extends 'basefront.html.twig' %}

{% block title %}Question List{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
        <h1>Cocher la bonne reponse</h1>
    
        {% for question in questions %}
            <br><br><br>
            <form>
            <h2 style="color: rgb(135, 50, 50);">{{ question.questiontext }}</h2>
            <input type="radio" id="option1" name="options" value="{{ question.optiona }}">
            <label for="option1">{{ question.optiona }}</label><br>

            <input type="radio" id="option2" name="options" value="{{ question.optionb }}">
            <label for="option2">{{ question.optionb }}</label><br>

            <input type="radio" id="option3" name="options" value="{{ question.optionc }}">
            <label for="option3">{{ question.optionc }}</label><br>
            </form>
            --------------------------------------------------------------------------------
        {% endfor %}
        <br>
        <br>
        <a class="btn btn-success" href="{{ path('app_quiz_front') }}">Valider</a></div>
        <div class="col-3"></div>
    </div>
{% endblock %}
